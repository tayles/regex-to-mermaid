{
  "name": "regex-to-mermaid",
  "version": "1.0.4",
  "description": "A TypeScript library and CLI tool to visualize regular expressions as Mermaid flowchart diagrams",
  "keywords": [
    "regex",
    "regexp",
    "regular-expression",
    "mermaid",
    "flowchart",
    "diagram",
    "markdown",
    "graph",
    "pcre",
    "pcre2",
    "re2",
    "posix",
    "visualization",
    "visualize",
    "cli",
    "tool",
    "parser",
    "ast"
  ],
  "homepage": "https://github.com/tayles/regex-to-mermaid",
  "bugs": {
    "url": "https://github.com/tayles/regex-to-mermaid/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tayles/regex-to-mermaid.git"
  },
  "license": "MIT",
  "author": "tayles",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "regex-to-mermaid": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bunup",
    "dev": "bun run src/cli.ts",
    "generate-all": "bun run generate-examples && bun run generate-themes",
    "postgenerate-all": "bun run lint:fix && bun run optimize-images",
    "generate-examples": "bun scripts/generate-examples.ts",
    "generate-themes": "bun scripts/generate-themes.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "optimize-images": "bunx @343dev/optimizt diagrams/",
    "prepare": "bun simple-git-hooks",
    "preview-changelog": "bunx changelogithub --dry",
    "release": "bumpp --commit --push --tag",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "type-check": "tsc --noEmit"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lint && bun run type-check"
  },
  "dependencies": {
    "@eslint-community/regexpp": "^4.12.2",
    "commander": "^14.0.1",
    "pcre-to-regexp": "^1.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@types/bun": "latest",
    "bumpp": "^10.3.1",
    "bunup": "^0.15.4",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
